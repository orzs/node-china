        <li class="">
          <a href="/user/<%= user.login_name %>/following">
            正在关注
          </a>
        </li>
        <li class="">
          <a href="/user/<%= user.login_name %>/blocked">
            已屏蔽
          </a>
        </li>
      </ul>
      <div class="panel panel-default userinfo">
        <div class="panel-body vcard clearfix">
          <ul class="list-group">
            <% if(user.location_city && user.location_city != ''){ %>
              <li class="adr list-group-item">
                <label>
                  城市:
                </label>
                <span class="region">
                  <a href="/users/city/%E5%8C%97%E4%BA%AC">
                    <%= user.location_city %>
                  </a>
                </span>
              </li>
            <% } %>
            <% if(user.company && user.company != ''){ %>
              <li class="adr list-group-item">
                <label>
                  公司:
                </label>
                <span class="org">
                  <%= user.company %>
                </span>
              </li>
            <% } %>
            <li class="list-group-item">
              <label>
                Email:
              </label>
              <span>
                <a href="mailto:ljw040426@gmail.com">
                  <%= user.email %>
                </a>
              </span>
            </li>
            <% if(user.github && user.github != ''){ %>
              <li class="list-group-item">
                <label>
                  github:
                </label>
                <span>
                  <a target="_blank" class="url" rel="nofollow" href="http://github.com/<%= user.github %>">
                    @<%= user.github %>
                  </a>
                </span>
              </li>
            <% } %>
            <% if(user.twitter && user.twitter != ''){ %>
              <li class="list-group-item">
                <label>
                  Twitter:
                </label>
                <span>
                  <a target="_blank" class="url" rel="nofollow" href="http://twitter.com/<%= user.twitter %>">
                    @<%= user.twitter %>
                  </a>
                </span>
              </li>
            <% } %>
            <% if(user.website && user.website != ''){ %>
              <li class="list-group-item">
                <label>
                  博客:
                </label>
                <span>
                  <a target="_blank" class="url" rel="nofollow" href="<%= user.website %>">
                    <%= user.website %>
                  </a>
                </span>
              </li>
            <% } %>
            <% if(user.signature && user.signature != ''){ %>
              <li class="list-group-item">
                <label>
                  签名:
                </label>
                <span>
                  <%= user.signature %>
                </span>
              </li>
            <% } %>
            <li class="list-group-item">
              <label>
                Since:
              </label>
              <span>
                <%= user.create_date %>
              </span>
            </li>
          </ul>
        </div>
      </div>
      <% if(user.summary && user.summary != ''){ %>
        <div class="panel panel-default bio">
          <div class="panel-heading">
            个人介绍
          </div>
          <div class="panel-body markdown">
            <p>
              <%= user.summary %>
            </p>
          </div>
        </div>
      <% } %>
